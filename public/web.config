<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <!-- Mostrar errores detallados (cambiar a Custom en producción) -->
        <httpErrors errorMode="Detailed" />
        
        <!-- URL Rewrite Rules -->
        <rewrite>
            <rules>
                <!-- Remover public de la URL -->
                <rule name="Laravel" stopProcessing="true">
                    <match url="^(.*)$" ignoreCase="false" />
                    <conditions>
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
                    </conditions>
                    <action type="Rewrite" url="index.php/{R:1}" />
                </rule>
            </rules>
        </rewrite>

        <!-- Default Document -->
        <defaultDocument>
            <files>
                <clear />
                <add value="index.php" />
            </files>
        </defaultDocument>

        <!-- Handler Mappings para PHP (ajustar ruta según instalación) -->
        <handlers>
            <remove name="PHP_via_FastCGI" />
            <add name="PHP_via_FastCGI" path="*.php" verb="*" modules="FastCgiModule" 
                 scriptProcessor="C:\php\php-cgi.exe" resourceType="Either" requireAccess="Script" />
        </handlers>

        <!-- Security Settings -->
        <security>
            <requestFiltering>
                <!-- Ocultar archivos y carpetas sensibles -->
                <hiddenSegments>
                    <add segment=".env" />
                    <add segment=".git" />
                    <add segment=".gitignore" />
                    <add segment="storage" />
                    <add segment="bootstrap" />
                    <add segment="vendor" />
                    <add segment="app" />
                    <add segment="config" />
                    <add segment="database" />
                    <add segment="routes" />
                    <add segment="resources" />
                    <add segment="tests" />
                </hiddenSegments>
                
                <!-- Bloquear extensiones sensibles -->
                <fileExtensions>
                    <add fileExtension=".env" allowed="false" />
                    <add fileExtension=".git" allowed="false" />
                    <add fileExtension=".ini" allowed="false" />
                    <add fileExtension=".log" allowed="false" />
                    <add fileExtension=".md" allowed="false" />
                </fileExtensions>

                <!-- Límites de peticiones -->
                <requestLimits maxAllowedContentLength="52428800" maxQueryString="2048" />
            </requestFiltering>
        </security>

        <!-- HTTP Headers de Seguridad -->
        <httpProtocol>
            <customHeaders>
                <add name="X-Frame-Options" value="SAMEORIGIN" />
                <add name="X-Content-Type-Options" value="nosniff" />
                <add name="X-XSS-Protection" value="1; mode=block" />
                <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
                <remove name="X-Powered-By" />
            </customHeaders>
        </httpProtocol>

        <!-- Compression -->
        <urlCompression doStaticCompression="true" doDynamicCompression="true" />

        <!-- Static Content -->
        <staticContent>
            <!-- MIME Types para archivos modernos -->
            <remove fileExtension=".woff" />
            <mimeMap fileExtension=".woff" mimeType="application/font-woff" />
            <remove fileExtension=".woff2" />
            <mimeMap fileExtension=".woff2" mimeType="application/font-woff2" />
            <remove fileExtension=".json" />
            <mimeMap fileExtension=".json" mimeType="application/json" />
            <remove fileExtension=".svg" />
            <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />
            
            <!-- Client Cache para archivos estáticos -->
            <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="7.00:00:00" />
        </staticContent>

        <!-- HTTP Errors - Mostrar errores detallados (cambiar a Custom en producción) -->
        <httpErrors errorMode="Detailed" existingResponse="PassThrough" />

        <!-- Directory Browsing -->
        <directoryBrowse enabled="false" />
    </system.webServer>
</configuration>
